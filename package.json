{
	"name": "vscode-terramate",
	"publisher": "mineiros",
	"description": "VSCode Terramate Extension",
	"author": "Mineiros GmbH",
	"license": "Apache",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/mineiros-io/vscode-terramate"
	},
	"categories": [
		"Programming Languages",
		"Azure"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:terramate"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "terramate",
				"extensions": [
					".tm",
					".tm.hcl"
				],
				"aliases": [
					"Terramate",
					"terramate",
					"tm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "terramate",
				"scopeName": "source.tm",
				"path": "./syntaxes/terramate.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts,.tsx",
		"test": "sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.12.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2"
	}
}
